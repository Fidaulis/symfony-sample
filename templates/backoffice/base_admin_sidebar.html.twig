{% set active = 'active' %}

<aside class="main-sidebar">
    <section class="sidebar">
        <ul class="sidebar-menu">
            <li class="{% if menu_dashboard is defined %}{{ active }}{% endif %} treeview">
                <a href="{{ path('dashboard_index') }}">
                    <i class="fa fa-dashboard"></i> <span>Tableau de bord</span>
                </a>
            </li>
                {# Utilisateur #}
                <li class="treeview {% if menu_user is defined or menu_role is defined %}{{ active }}{% endif %}">
                    <a href="#">
                        <i class="fa fa-users"></i>
                        <span>Administrateur</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        {# Utilisateur #}
                        <li class="treeview {% if menu_user is defined %}{{ active }}{% endif %}">
                            <a href="#">
                                <i class="fa fa-user"></i>
                                <span>Utilisateur</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="{% if menu_user_list is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('user_index') }}"><i class="fa fa-circle-o"></i> Liste</a>
                                </li>
                                <li class="{% if menu_user_create is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('user_new') }}"><i class="fa fa-circle-o"></i> Créer</a>
                                </li>
                            </ul>
                        </li>
                            {# Rôle #}
                            <li class="treeview {% if menu_role is defined %}{{ active }}{% endif %}">
                                <a href="{{ path('role_index') }}">
                                    <i class="fa fa-balance-scale"></i>
                                    <span>Rôle</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                            </li>
                    </ul>
                </li>

                {# Service #}
                <li class="treeview {% if menu_service_type is defined or menu_service is defined %}{{ active }}{% endif %}">
                    <a href="#">
                        <i class="fa fa-hand-lizard-o"></i>
                        <span>Service</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        {# Type #}
                        <li class="treeview {% if menu_service_type is defined %}{{ active }}{% endif %}">
                            <a href="#">
                                <i class="fa fa-server"></i>
                                <span>Type</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="{% if menu_service_type_list is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_type_index') }}"><i class="fa fa-circle-o"></i> Liste</a>
                                </li>
                                <li class="{% if menu_service_type_create is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_type_new') }}"><i class="fa fa-circle-o"></i> Créer</a>
                                </li>
                            </ul>
                        </li>

                        {# Service #}
                        <li class="treeview {% if menu_service is defined %}{{ active }}{% endif %}">
                            <a href="#">
                                <i class="fa fa-hand-lizard-o"></i>
                                <span>Service</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="{% if menu_service_list is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_index') }}"><i class="fa fa-circle-o"></i> Liste</a>
                                </li>
                                <li class="{% if menu_service_create is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_new') }}"><i class="fa fa-circle-o"></i> Créer</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>

                {# Option service #}
                <li class="treeview {% if menu_service_option_type is defined or menu_service_option is defined %}{{ active }}{% endif %}">
                    <a href="#">
                        <i class="fa fa-microchip"></i>
                        <span>Option service</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        {# Type #}
                        <li class="treeview {% if menu_service_option_type is defined %}{{ active }}{% endif %}">
                            <a href="#">
                                <i class="fa fa-server"></i>
                                <span>Type</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="{% if menu_service_option_type_list is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_option_type_index') }}">
                                        <i class="fa fa-circle-o"></i> Liste
                                    </a>
                                </li>
                                <li class="{% if menu_service_option_type_create is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_option_type_new') }}">
                                        <i class="fa fa-circle-o"></i> Créer
                                    </a>
                                </li>
                            </ul>
                        </li>

                        {# Option service #}
                        <li class="treeview {% if menu_service_option is defined %}{{ active }}{% endif %}">
                            <a href="#">
                                <i class="fa fa-microchip"></i>
                                <span>Option service</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="{% if menu_service_option_list is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_option_index') }}">
                                        <i class="fa fa-circle-o"></i> Liste
                                    </a>
                                </li>
                                <li class="{% if menu_service_option_create is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_option_new') }}">
                                        <i class="fa fa-circle-o"></i> Créer
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
                    <li class="treeview {% if menu_service_client is defined %}{{ active }}{% endif %}">
                        <a href="#">
                            <i class="fa fa-desktop"></i>
                            <span>Service client</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            {% if is_granted('ROLE_SUPERADMIN') %}
                                <li class="{% if menu_service_client_create is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_client_new') }}">
                                        <i class="fa fa-circle-o"></i> Ajouter commande
                                    </a>
                                </li>
                                <li class="{% if menu_service_client_list_not_validated is defined %}{{ active }}{% endif %}">
                                    <a href="{{ path('service_client_list_not_validated') }}">
                                        <i class="fa fa-circle-o"></i> Voir liste à valider
                                    </a>
                                </li>
                            {% endif %}
                            <li class="{% if menu_service_client_list_validated is defined %}{{ active }}{% endif %}">
                                <a href="{{ path('service_client_list_validated') }}">
                                    <i class="fa fa-circle-o"></i> Voir liste validé
                                </a>
                            </li>
                        </ul>
                    </li>

                {# Facture client #}
                <li class="treeview {% if menu_facture is defined %}{{ active }}{% endif %}">
                    <a href="{{ path('facture_index') }}">
                        <i class="fa fa-file-text"></i>
                        <span>Facture client</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                </li>

                {# Email newsletter #}
                <li class="treeview {% if menu_email_newsletter is defined or menu_message_newsletter is defined %}{{ active }}{% endif %}">
                    <a href="#">
                        <i class="fa fa-newspaper-o"></i>
                        <span>Newsletter</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="{% if menu_email_newsletter is defined %}{{ active }}{% endif %}">
                            <a href="{{ path('email_newsletter_index') }}">
                                <i class="fa fa-circle-o"></i> Email abonné
                            </a>
                        </li>
                        <li class="{% if menu_message_newsletter is defined %}{{ active }}{% endif %}">
                            <a href="{{ path('message_newsletter_index') }}">
                                <i class="fa fa-circle-o"></i> Newsletter
                            </a>
                        </li>
                    </ul>
                </li>

                {# Slide #}
                <li class="treeview {% if menu_slide is defined %}{{ active }}{% endif %}">
                    <a href="{{ path('slide_index') }}">
                        <i class="fa fa-slideshare"></i>
                        <span>Slide</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                </li>

        </ul>
    </section>
</aside>